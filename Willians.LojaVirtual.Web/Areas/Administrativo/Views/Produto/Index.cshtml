@model IEnumerable<Willians.LojaVirtual.Dominio.Entidade.Produto>

@{ 
    ViewBag.Title = "Administrativo - Produtos";
    Layout = "~/Areas/Administrativo/Views/Shared/_AdministrativoLayout.cshtml";
}

<div class="alert alert-success" id="mensagem"></div>

<div id="divexcluir"></div>

<div class="panel panel-default">

    <div class="panel panel-heading">
        <h3>Willians - Loja Virtual - Administrativo Produtos</h3>
    </div>

    <div class="panel panel-body">
        @Html.ActionLink(linkText: "Novo Produto",
                         actionName: "NovoProduto",
                         controllerName: "Produto",
                         routeValues: null,
                         htmlAttributes: new {@class = "btn btn-default"})

        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">#Id</th>
                    <th>Nome</th>
                    <th class="text-right">Preço</th>
                    <th class="text-center">Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr id="row-@item.ProdutoId">

                        <td class="text-right">
                            # @item.ProdutoId                                               
                        </td>

                        <td>
                            @Html.ActionLink(linkText: item.Nome,
                                             actionName: "Alterar", 
                                             routeValues: new { item.ProdutoId },
                                             htmlAttributes: null)
                        </td>

                        <td class="text-right">
                            @item.Preco.ToString("c")
                        </td>

                        <td class="text-center">
                            @*@using (Html.BeginForm("Excluir", "Produto"))
                            {
                                @Html.Hidden("ProdutoId", item.ProdutoId)
                                <input type="submit" class="btn btn-default btn-xs" value="Excluir" />
                            }*@
                            <input type="submit" class="btn btn-default btn-xs" id=@item.ProdutoId name=@item.Nome value="Excluir" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("Confirmacao")
